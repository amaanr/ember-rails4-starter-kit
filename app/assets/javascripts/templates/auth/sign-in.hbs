<div class="container">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6">
			<form>
				<fieldset>
					<div class="form-group">
						<label>Email address</label>
						{{input type="text" class="form-control" placeholder="email@address.com" value=view.email}}
					</div>
					<div class="form-group">
						<label>Password</label>
						{{input type="password" class="form-control" placeholder="password" value=view.password}}
					</div>
					<button type="submit" class="btn btn-default">Log in</button>
				</fieldset>
			</form>
		</div> 
		<div class="col-lg-3"></div>
	</div>
</div>